#include<iostream>
#include <bits/stdc++.h>
using namespace std;

int size,element,arr[100];
int linearsearch(int arr[],int size,int element){
    for(int i=0;i<size;i++){
        if(arr[i]==element){
            return i;
        }
    }
    return -1;
}
int binarysearch(int arr[],int size,int element){
    int low=0;
    int mid;
    int high = size-1;
    while(low<=high){
        mid=(low+high)/2;
        if(arr[mid]==element){
            return mid;
        }
    
    if(arr[mid]<element){
        low = mid+1;
    }
    if(arr[mid]>element){
        high=mid-1;
    }
}
return-1;
}

int main()
{  
    int ch;
    cout<<"Enter the size of array: ";
    cin>>size;
    cout<<"Enter the elements of array\n";
    for(int i=0 ; i<size ; i++){
        cin>>arr[i];
    }
    sort(arr, arr + size);
     cout<< "Sorted Array: "<<endl;
     for(int i=0 ; i<size ; i++){
        cout<<arr[i] <<" "<<endl;
    }
    
    cout<<"Enter the element you want to search: ";
    cin>>element;
    cout<<"Enter 1 for linear search\n";
    cout<<"Enter 2 for binary search\n";
    cin>>ch;
    if(ch==1){
        int linear =linearsearch(arr,size,element);
        if(linear==-1){
            cout<<"Your element is not found"<<endl;
        }
        else{
            cout<<"Your element is at index "<<linear;
        }
    }
    if(ch==2){
        int binary =binarysearch(arr,size,element);
        if(binary==-1){
            cout<<"Your element is not found";
         }
         else{
         cout<<"Your element is at index "<<binary;
         }
        
    }

    return 0;
}

